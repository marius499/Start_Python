print("Scrie un program ce va afisa sprimele 10 numere naturale" )

# Write a program in Python to display the first 10 natural numbers
def printNumbers():
    numbers = range(1,11)
    for x in numbers:
        print(x)

printNumbers()

###  Write a program in Python to display the first the sum and the average of
###      numbers from 200 to 450.
print("Scrie un program ce va afisa suma si media numerelor de la 200 la 450" )

def numbers():
    numbers = range(200,451)
    sum = 0
    for x in numbers:
        sum = sum +x
    print("Suma numerelor intre 200 si 450 este: ",sum)
    print("Media numerelor intre 200 si 450 este: ",sum/len(numbers))

numbers()

#Write  a Python program to find the zodiacal sign when you have the day
#and  the month of birth

print("Scrie un program ce va afisa semnul zodiacal in functie de luna si zi")

def zodiac():
    luna = input("pentru a afla semnul zodiacal introdu luna: ")
    ziua = input("acum trebuie sa introduci ziua: ")

    if (luna == "martie") or (luna == "Martie"):
        zodia = "Berbec" if ziua > "20" else "Pesti"
    elif luna == "aprilie" or luna == "Aprilie":
        zodia = "Taur" if ziua > "20" else "Berbec"
    elif luna == "mai" or luna == "Mai":
        zodia = "Gemeni" if ziua > "21" else "Berbec"
    elif luna == "iunie" or luna == "Iunie":
        zodia = "Rac" if ziua > "21" else "gemeni"
    elif luna == "iulie" or luna == "Iulie":
        zodia = "Leu" if ziua > "22" else "Rac"
    elif luna == "august" or luna == "August":
        zodia = "Fecioara" if ziua > "22" else "Leu"
    elif luna == "septembrie" or luna == "Septembrie":
        zodia = "Balanta" if ziua > "22" else "Fecioara"
    elif luna == "octombrie" or luna == "Octombrie":
        zodia = "Scorpion" if ziua > "22 else "Balanta"
    elif luna == "noiembrie" or luna == "Noiembrie":
        zodia = "Sagetator" if ziua > "21" else "Scorpion"
    elif luna == "decembrie" or luna == "Decembrie":
        zodia = "Capricorn" if ziua > "21" else "Sagetator"
    elif luna == "ianuarie" or luna == "Ianuarie":
        zodia = "Varsator" if ziua > "20" else "Capricorn"
    elif luna == "februarie" or luna == "Februarie":
        zodia = "Pesti" if ziua > "18" else "Varsator"
    print("DATA ", ziua, luna, "CORESPUNDE ZODIEI: ", zodia)

zodiac()
zodiac()
zodiac()
zodiac()



# Write a Python program to find the number of days in a month.


def leapYear():
    an = int(input("Please enter the year: "))
    if an % 4 == 0 and (an % 100 != 0 or an % 400 == 0):
        print("Anul intrudus este bisect ")
    else:
        print("Anul nu e bisect")

